<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <title>学员管理系统</title>
    <link rel="stylesheet" href="bootstrap/css/bootstrap.css"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>
<body>
<h1 style="color: blue;display:block;margin:0 auto;width: 400px;">
    学员管理系统
    <a href="/add">
        <button type="button" class="btn btn-danger">增加学员</button>
    </a>
<h1>
<div class="container">
        <table class="table table-hover">
          <tr>
               <th>username</th>
              <th>pic</th>
               <th>age</th>
               <th>sex</th>
               <th>tel</th>
               <th>operator</th>
          </tr>
            <%for(var i=0;i<list.length;i++){%>
            <tr>
                <td><%=list[i].name%></td>
                <td> <img src="<%=list[i].pic%>" style="width: 50px;height: 50px;"></td>
                <td><%=list[i].age%></td>
                <td><%=list[i].sex%></td>
                <td><%=list[i].tel%></td>

                <td>
                    <a type="button"  href="/edit?id=<%=list[i]._id%>" class="btn btn-success" target="_blank">编辑</a>
                    <a type="button" class="btn btn-danger" href="/dele?id=<%=list[i]._id%>" id="dele" >删除</a>
                </td>


            </tr>
            <%}%>
        </table>
    </div>

</body>
     <script>
         $()
     </script>
</html>